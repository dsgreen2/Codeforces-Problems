#include<bits/stdc++.h>
using namespace std;

int main(){
    
    long long t;
    cin>>t;
    
    while(t--){
        
        long long n;
        
        cin>>n;
        vector<long long> v(2*n,0);
        
        for(int i=0;i<2*n;i++){
            cin>>v[i];
        }
        
        sort(v.begin(),v.end());
        
        long long diff=abs(v[n+1]-v[n]);
        cout<<diff<<endl;
    }
    
    
    
    
    return 0;
}
